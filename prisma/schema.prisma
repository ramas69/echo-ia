generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// --- AUTHENTIFICATION (NEXTAUTH) ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- UTILISATEURS & PROGRESSION ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("STUDENT") // STUDENT or ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // LMS Relationships
  progress      UserProgress[]
  phaseStatuses UserPhaseStatus[]
}

model UserProgress {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  unit        Unit      @relation(fields: [unitId], references: [id], onDelete: Cascade)
  unitId      String
  
  completedAt DateTime? 

  @@unique([userId, unitId])
}

model UserPhaseStatus {
  id        String      @id @default(cuid())
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  phase     Phase       @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId   String
  
  status    PhaseStatus @default(LOCKED) 
  checkpointVerifiedAt DateTime? 

  @@unique([userId, phaseId])
}

// --- CURRICULUM (CONTENU STATIQUE) ---

model Phase {
  id           String   @id @default(cuid())
  title        String   
  slug         String   @unique 
  description  String   @db.Text 
  outcome      String   @db.Text 
  thumbnailUrl String?  
  orderIndex   Int      @unique 
  isPublished  Boolean  @default(false)
  
  checkpointInstruction String? @db.Text 
  units        Unit[]
  userStatuses UserPhaseStatus[]
  
  @@index([orderIndex])
  @@index([isPublished])
}

model Unit {
  id          String   @id @default(cuid())
  phase       Phase    @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  phaseId     String
  
  title       String   
  slug        String   @unique
  orderIndex  Int
  isPublished Boolean  @default(false)
  
  videoProvider String // MUX, VIMEO, YOUTUBE
  videoId       String 
  durationSec   Int    
  
  content     String? @db.Text 
  resources   Resource[]
  progress    UserProgress[]

  @@unique([phaseId, orderIndex])
  @@index([phaseId])
  @@index([orderIndex])
  @@index([isPublished])
  @@index([slug])
}

model Resource {
  id          String       @id @default(cuid())
  unit        Unit         @relation(fields: [unitId], references: [id], onDelete: Cascade)
  unitId      String
  
  title       String       
  type        ResourceType 
  
  url         String?      @db.Text
  textContent String?      @db.Text 
}

// --- ENUMS ---

enum PhaseStatus {
  LOCKED
  UNLOCKED
  COMPLETED
}

enum ResourceType {
  NOTION_TEMPLATE
  MAKE_BLUEPRINT
  PDF_GUIDE
  PROMPT_TEXT
  EXTERNAL_LINK
  FILE_DOWNLOAD
}
